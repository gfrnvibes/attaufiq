# Environment variables untuk Production - Media Library Fix
# Copy ke .env untuk Koyeb deployment

# Basic Laravel
APP_NAME="Attaufiq"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta

# IMPORTANT: Set APP_URL sesuai dengan domain production Anda
APP_URL=https://your-app-domain.koyeb.app

# Database (Auto-configured dari Koyeb, tapi bisa override)
DB_CONNECTION=pgsql
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD akan auto-detected dari Koyeb

# Media Library & Upload Configuration
FILESYSTEM_DISK=public
MEDIA_DISK=public

# Queue settings untuk Media Library
QUEUE_CONNECTION=sync
QUEUE_CONVERSIONS_BY_DEFAULT=false
QUEUE_CONVERSIONS_AFTER_DB_COMMIT=false

# Image processing
IMAGE_DRIVER=gd

# Upload & PHP settings (sesuai dengan Dockerfile)
# Ini sudah diatur di PHP config, tapi bisa di-override via environment
MAX_UPLOAD_SIZE=50M
POST_MAX_SIZE=50M
MEMORY_LIMIT=256M

# Cache
CACHE_DRIVER=file
SESSION_DRIVER=file

# Filament
FILAMENT_FILESYSTEM_DISK=public

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
